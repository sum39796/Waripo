<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f29249">



        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:id="@+id/imageView2"
            android:background="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" ツール"
            android:id="@+id/textView3" />

        <Button
            android:id="@+id/drawer_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="enpitu"
            android:textColor="#FFFFFF"
            android:background="@drawable/icon4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="nuritubu"
            android:textColor="#FFFFFF"
            android:background="@drawable/icon5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView2" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:onClick="keshigomu"
            android:textColor="#FFFFFF"
            android:background="@drawable/icon6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="　太さ"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/button6"
                    android:onClick="hosome"
                    android:background="@drawable/icon17" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/button7"
                    android:onClick="tyuukann1"
                    android:background="@drawable/icon18" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/button8"
                    android:onClick="tyuukann2"
                    android:background="@drawable/icon19" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/button9"
                    android:onClick="futome"
                    android:background="@drawable/icon20" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="　色"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/kuro"
                    android:background="@drawable/icon7"
                    android:onClick="kuro" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/aka"
                    android:background="@drawable/icon8"
                    android:onClick="aka" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/midori"
                    android:background="@drawable/icon9"
                    android:onClick="midori" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/ao"
                    android:background="@drawable/icon10"
                    android:onClick="ao" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/mizuiro"
                    android:background="@drawable/icon11"
                    android:onClick="mizuiro" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/pinku"
                    android:background="@drawable/icon12"
                    android:onClick="pinku" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/kiiro"
                    android:background="@drawable/icon13"
                    android:onClick="kiiro" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/shiro"
                    android:background="@drawable/icon14"
                    android:onClick="shiro" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" レイヤー"
                android:id="@+id/textView5" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button"
                android:onClick="layer1"
                android:background="@drawable/icon15" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/button5"
                android:onClick="layer2"
                android:background="@drawable/icon16" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>